{
  "name": "Python Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {},
    "ghcr.io/devcontainers-contrib/features/pipx-package:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter"
      ]
    },
    "jetbrains": {
      "backend": "IntelliJ"
    }
  },
  "postCreateCommand": "pip install --user pipx && pipx ensurepath",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.config/zsh,target=/home/vscode/.config/zsh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.oh-my-zsh,target=/home/vscode/.oh-my-zsh,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "PIP_REQUIRE_VIRTUALENV": "false"
  }
}