{
  "name": "Rust Development",
  "image": "mcr.microsoft.com/devcontainers/rust:1",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/sccache:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "serayuzgur.crates",
        "tamasfe.even-better-toml"
      ]
    },
    "jetbrains": {
      "backend": "IntelliJ"
    }
  },
  "postCreateCommand": "cargo install cargo-nextest cargo-watch cargo-edit",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.config/zsh,target=/home/vscode/.config/zsh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.oh-my-zsh,target=/home/vscode/.oh-my-zsh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.cargo/registry,target=/home/vscode/.cargo/registry,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "RUSTC_WRAPPER": "sccache"
  }
}