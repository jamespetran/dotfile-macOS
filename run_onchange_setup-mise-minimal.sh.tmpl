#!/bin/bash
set -euo pipefail

# Minimal mise setup - only for managing shell tools, not language runtimes
# Language runtimes should be in dev containers

echo "🔧 Setting up mise for shell tools only..."

# Check if mise is installed
if ! command -v mise >/dev/null 2>&1; then
  echo "⚠️  mise not found. Install with: brew install mise"
  exit 1
fi

echo "✅ mise is available for shell tool management"
echo "💡 Language runtimes will be managed in dev containers"
echo ""
echo "📦 To use mise in dev containers:"
echo "  - Install mise in your container"
echo "  - Use 'mise use python@3.11' inside containers"
echo "  - Keep your host system clean!"